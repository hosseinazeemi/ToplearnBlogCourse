@page "/dashboard/news/create"
@using Toplearn_Blog.Dashboard.Shared.Components
<PageTitle>
    پنل مدیریت | ثبت خبر جدید
</PageTitle>
<div class="card-body">
    <Breadcrumb Class="pb-3 border-bottom">
        <BreadcrumbItem>داشبورد</BreadcrumbItem>
        <BreadcrumbItem>خبر</BreadcrumbItem>
        <BreadcrumbItem>ایجاد خبر</BreadcrumbItem>
    </Breadcrumb>

    <div class="pt-3">
        <h6 class="pb-3 fw-bold">ایجاد خبر جدید</h6>
        <Spin Spinning="@Loading">
            <NewsForm News="News" Tags="Tags" Users="Users" Categories="Categories" SubmitCallback="Submit" />
        </Spin>
    </div>
</div>